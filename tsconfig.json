{
  "ts-node": {
    "swc": true,
    "esm": true,
  },
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "#components/*": ["./components/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}